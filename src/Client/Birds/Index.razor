@page "/birds"
@using Client.Birds.Components
<PageTitle>Birds</PageTitle>


@if (birds is null)
{
    <p>Loading...</p>
}
else
{
    <div class="is-flex is-justify-content-flex-end mb-3">
        <a href="birds/add-spot" class="button is-primary">Spotted a new bird?</a>
    </div>
    <div class="columns is-multiline">
        @foreach (var bird in birds)
        {
            <div class="column is-one-quarter">
                <BirdListItem Bird="@bird"/>
            </div>
        }
    </div>
}

